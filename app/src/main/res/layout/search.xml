<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_search_title_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_txt"
                android:alpha="0.7"
                android:textSize="@dimen/h2_text_size"
                android:layout_margin="@dimen/margin_l"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/ev_search_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_bar_height"
                android:background="@drawable/custom_edit_text"
                android:layout_marginTop="@dimen/edit_text_margin"
                android:layout_marginStart="@dimen/edit_text_margin"
                android:layout_marginEnd="@dimen/edit_text_margin"
                android:paddingLeft="40sp"
                android:hint="Search a title"
                android:textColor="@color/light_gray"
                android:textColorHint="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/tv_search_title_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/iv_search_icon_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search"
                android:alpha="0.5"
                android:layout_marginStart="10sp"
                app:layout_constraintTop_toTopOf="@id/ev_search_search"
                app:layout_constraintStart_toStartOf="@id/ev_search_search"
                app:layout_constraintBottom_toBottomOf="@id/ev_search_search"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/id_searched_items_search"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_l"
                tools:listitem="@layout/search_item"
                app:layout_constraintTop_toBottomOf="@id/ev_search_search"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>