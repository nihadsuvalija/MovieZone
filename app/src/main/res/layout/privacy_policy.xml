<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_back_button"
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:layout_margin="@dimen/margin_xl"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/back_button_background"
            android:src="@drawable/ic_back"
            android:scaleType="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_privacy_policy_title_privacypolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy policy"
            android:textSize="@dimen/h2_text_size"
            app:layout_constraintTop_toTopOf="@id/iv_back_button"
            app:layout_constraintBottom_toBottomOf="@id/iv_back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_terms_privacypolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_txt"
            android:textSize="@dimen/h3_text_size"
            android:layout_marginTop="@dimen/margin_xl"
            android:fontFamily="@font/sf_pro_display_bold"
            app:layout_constraintTop_toBottomOf="@id/iv_back_button"
            app:layout_constraintStart_toStartOf="@id/iv_back_button"/>

        <TextView
            android:id="@+id/tv_terms_content_privacypolicy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginEnd="@dimen/margin_xl"
            android:text="@string/terms_placeholder_txt"
            android:textSize="16sp"
            android:alpha="0.5"
            app:layout_constraintTop_toBottomOf="@id/tv_terms_privacypolicy"
            app:layout_constraintStart_toStartOf="@id/tv_terms_privacypolicy"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_changes_terms_privacypolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/changes_terms_txt"
            android:textSize="@dimen/h3_text_size"
            android:layout_marginTop="@dimen/margin_xl"
            android:fontFamily="@font/sf_pro_display_bold"
            app:layout_constraintTop_toBottomOf="@id/tv_terms_content_privacypolicy"
            app:layout_constraintStart_toStartOf="@id/tv_terms_content_privacypolicy" />

        <TextView
            android:id="@+id/tv_changes_terms_content_privacypolicy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginEnd="@dimen/margin_xl"
            android:text="@string/terms_placeholder_txt"
            android:textSize="16sp"
            android:alpha="0.5"
            app:layout_constraintTop_toBottomOf="@id/tv_changes_terms_privacypolicy"
            app:layout_constraintStart_toStartOf="@id/tv_changes_terms_privacypolicy"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>