<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/movie_item_width"
        android:layout_height="@dimen/movie_item_height"
        android:layout_marginStart="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="5sp"
        android:background="@color/default_elements_background">

        <ImageView
            android:id="@+id/iv_movie_poster_movieitem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/movie_item_poster_height"
            android:scaleType="center"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toTopOf="@id/tv_movie_title_movieitem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_movie_title_movieitem"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="Movie Title"
            android:textSize="10sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="10sp"
            android:autoSizeMinTextSize="6sp"
            app:layout_constraintBottom_toTopOf="@id/tv_genre_movieitem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_movie_poster_movieitem"/>

        <ImageView
            android:id="@+id/iv_rating_movieitem"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_star"
            app:layout_constraintBottom_toBottomOf="@id/tv_rating_movieitem"
            app:layout_constraintEnd_toStartOf="@id/tv_rating_movieitem"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/tv_movie_title_movieitem"
            app:layout_constraintTop_toTopOf="@id/tv_rating_movieitem" />

        <TextView
            android:id="@+id/tv_rating_movieitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            android:textSize="8sp"
            android:textColor="@color/rating_color"
            android:fontFamily="@font/sf_pro_display_bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_movie_title_movieitem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_rating_movieitem"
            app:layout_constraintTop_toTopOf="@id/tv_movie_title_movieitem" />

        <TextView
            android:id="@+id/tv_genre_movieitem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="Genre"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_movie_title_movieitem"
            app:layout_constraintStart_toStartOf="@id/tv_movie_title_movieitem"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_title_movieitem" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>