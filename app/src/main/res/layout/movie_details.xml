<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_background_moviedetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/movie_collage"
            android:scaleType="centerCrop"
            android:alpha="0.3"
            android:src="@drawable/shadow_effect"/>

        <ImageView
            android:id="@+id/iv_back_button"
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:layout_margin="@dimen/button_margin_side"
            android:src="@drawable/ic_back"
            android:scaleType="center"
            android:background="@drawable/back_button_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_movie_title_moviedetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textSize="@dimen/h1_text_size"
            app:layout_constraintTop_toTopOf="@id/iv_back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>