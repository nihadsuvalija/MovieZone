<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_background_signin"
            android:background="@drawable/movie_collage"
            android:src="@drawable/shadow_effect"
            android:alpha="0.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_logo_signin"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toTopOf="@id/tv_logo_signin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_logo_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="@string/app_name"
            android:textSize="26sp"
            app:layout_constraintBottom_toTopOf="@id/btn_sign_up_signin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo_signin" />

        <Button
            android:id="@+id/btn_sign_up_signin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_margin_top"
            android:layout_marginBottom="@dimen/button_margin_top"
            android:layout_marginLeft="@dimen/button_margin_side"
            android:layout_marginRight="@dimen/button_margin_side"
            android:text="@string/sign_up_txt"
            app:layout_constraintBottom_toTopOf="@id/tv_already_txt_signin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_logo_signin" />

        <TextView
            android:id="@+id/tv_already_txt_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I aleady have an account? "
            app:layout_constraintBottom_toTopOf="@id/divider1_signin"
            app:layout_constraintEnd_toStartOf="@id/sign_in_txt_signin"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_sign_up_signin" />

        <TextView
            android:id="@+id/sign_in_txt_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Sign in."
            android:textColor="@color/secondary_theme_color"
            app:layout_constraintBottom_toBottomOf="@id/tv_already_txt_signin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_already_txt_signin"
            app:layout_constraintTop_toTopOf="@id/tv_already_txt_signin" />

        <View
            android:id="@+id/divider1_signin"
            android:layout_width="80sp"
            android:layout_height="@dimen/divider_s"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/sign_in_txt_signin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_or_sign_up_signin"/>

        <TextView
            android:id="@+id/tv_or_sign_up_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or Sign up with"
            app:layout_constraintBottom_toBottomOf="@id/divider1_signin"
            app:layout_constraintEnd_toStartOf="@id/divider2_signin"
            app:layout_constraintStart_toEndOf="@id/divider1_signin"
            app:layout_constraintTop_toTopOf="@id/divider1_signin" />

        <View
            android:id="@+id/divider2_signin"
            android:layout_width="80sp"
            android:layout_height="@dimen/divider_s"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@id/divider1_signin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_or_sign_up_signin"
            app:layout_constraintTop_toTopOf="@id/divider1_signin" />

        <ImageView
            android:id="@+id/iv_google_signin"
            android:layout_width="72sp"
            android:layout_height="72sp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_google"
            android:scaleType="center"
            app:layout_constraintTop_toBottomOf="@id/divider1_signin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_facebook_signin"/>

        <ImageView
            android:id="@+id/iv_facebook_signin"
            android:layout_width="72sp"
            android:layout_height="72sp"
            android:src="@drawable/ic_facebook"
            android:scaleType="center"
            android:background="@drawable/circle"
            android:backgroundTint="@android:color/holo_blue_light"
            app:layout_constraintTop_toTopOf="@id/iv_google_signin"
            app:layout_constraintBottom_toBottomOf="@id/iv_google_signin"
            app:layout_constraintStart_toEndOf="@id/iv_google_signin"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>